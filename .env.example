# ===========================================
# Environment Configuration Example
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Telegram Bot Settings
BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_id_here
PAYMENT_CHANNEL_ID=your_payment_channel_id_here

# 3x-ui Panel Credentials
XUI_USERNAME=your_username_here
XUI_PASSWORD=your_password_here

# Hiddify Panel Configuration
# API Key: Get this from your Hiddify panel -> Settings -> API
HIDDIFY_API_KEY=your_hiddify_api_key_here
# Admin UUID: Get this from your Hiddify panel admin user details
HIDDIFY_ADMIN_UUID=your_admin_uuid_here

# Database
DATABASE_PATH=vpn_bot.db

# Security Settings
RATE_LIMIT_ENABLED=true
DEBUG_MODE=false
